<%= form_with(model: database, local: true) do |form| %>
  <% if database.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(database.errors.count, "error") %> prohibited this database from being saved:</h2>

      <ul>
      <% database.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Nome"%>
    <%= form.text_field :name, id: :database_name ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :author, "Autor" %>
    <%= form.text_field :author, id: :database_author ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :description, "Descrição" %>
    <%= form.text_area :description, id: :database_description ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :date, "Data de criação" %>
    <%= form.text_field :date, id: :database_date ,class:"form-control"%>
  </div>

  <div class="actions">
    <%= form.submit "Criar", class:"btn btn-primary botao-table"%>
  </div>
<% end %>
