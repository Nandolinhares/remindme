<!DOCTYPE html>
<html>
  <head>
    <title>Remindme</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="notifications">
    	 <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    </div>
    <% if current_user %>
        <header class="navbar navbar-fixed-top">
          <section class="row">
            <div class="col-md-3">
              <%= link_to image_tag("logo.png", alt:"logo", class:"logo"), root_path%>
            </div>
            <div class="col-md-9 menu_top text-right">
              <ul>
                <li><a href=" <%= root_path %>">Home</a></li>| 
                <li><a href="<%= databases_path %>">Banco de Requisitos</a></li>| 
                <%= menu_item "Log Out", destroy_user_session_path, method: :delete %>
              </ul>  
            </div>
          </section>   
      </header>  
    <% end %>
    <div class="container main-template">
      <%= yield %>
    </div>
  </body>
</html>
