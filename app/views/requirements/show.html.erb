<div class="row">

  <div class="col-md-7">
    <h4><strong>Descrição</strong>: <%= @requirement.description %></h4>
  </div>

  <div class="col-md-5 priority-pages">

    <h4><strong>Prioridade:</strong></h4>

    <%if @requirement.priority == 1 %>
      
      <div class="stars">
        <%= image_tag("star.png", alt:"star1") %>
      </div>

    <% elsif @requirement.priority == 2 %>
      <div class="stars">
        <%= image_tag("star.png", alt:"star1") %>
        <%= image_tag("star.png", alt:"star1") %>
      </div>

    <% elsif @requirement.priority == 3 %>
      <div class="stars">
        <%= image_tag("star.png", alt:"star1") %>
        <%= image_tag("star.png", alt:"star1") %>
        <%= image_tag("star.png", alt:"star1") %>
      </div>

    <% elsif @requirement.priority == 4 %>
      <div class="stars">
        <%= image_tag("star.png", alt:"star1") %>
        <%= image_tag("star.png", alt:"star1") %>
        <%= image_tag("star.png", alt:"star1") %>
        <%= image_tag("star.png", alt:"star1") %>
      </div>

    <% elsif @requirement.priority == 5 %>
        <div class="stars">
          <%= image_tag("star.png", alt:"star1") %>
          <%= image_tag("star.png", alt:"star1") %>
          <%= image_tag("star.png", alt:"star1") %>
          <%= image_tag("star.png", alt:"star1") %>
          <%= image_tag("star.png", alt:"star1") %>
        </div>
   <% end %>
  </div>
</div>

<h4><strong>Atributos</strong>:</h4>
<p class="atributos">
  <%= @requirement.atributo %>
</p>
</fieldset>

