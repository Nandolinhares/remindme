<p id="notice"><%= notice %></p>

<h1>Requirements</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Prioridade</th>
      <th>Descrição</th>
      <th>Base de Dados</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.name %></td>
        <td><%= requirement.priority %></td>
        <td><%= requirement.description %></td>
        <td><%= requirement.database.name %></td>
        <td><%= link_to 'Ver', requirement, class:"btn btn-info botao-table" %></td>
        <td><%= link_to 'Editar', edit_requirement_path(requirement), class:"btn btn-info botao-table" %></td>
        <td><%= link_to 'Excluir', requirement, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-info botao-table"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo requisito', new_requirement_path, class:"btn btn-primary botao-table" %>
